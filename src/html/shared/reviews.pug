mixin reviewTextSignature(review, additionalClass)
    img.quote-logo(src=require('../../images/reviews/logos/quote.svg'))
    h5.review-text=review.text
        h4.review-text.reviewer-name(class=additionalClass)=review.signature
        h5.review-text.reviewer-position=review.title
        if review.subline
            h5.review-text.reviewer-position=review.subline

mixin reviews(reviews, id, title, additionalClass)
    .reviews-container(id=id)
        .default-content-block
            if title
                h3.title=title
            each review, index in reviews
                .carousel-item-container(class=index === 0 ? 'active' : '')
                    .review(class=additionalClass)
                            .part
                                .avatar(class=additionalClass)
                                    img(src=review.image)
                            .part
                                if review.logo == null
                                    +reviewTextSignature(review, additionalClass)
                                else if review.compactLogo
                                    .compact-logo-signature
                                        .compact-logo
                                            img(src=review.logo)
                                        div
                                            +reviewTextSignature(review, additionalClass)
                                else
                                    +reviewTextSignature(review, additionalClass)
                                    .logo
                                        img(src=review.logo)
            .controls-container
                span.control(class=additionalClass).left
                    include ../../images/icons/chevron-left-icon.svg
                ol.indicators-container
                    each review, index in reviews
                        li.indicator(class = index === 0 ? 'active' : '')
                span.control(class=additionalClass).right
                    include ../../images/icons/chevron-right-icon.svg