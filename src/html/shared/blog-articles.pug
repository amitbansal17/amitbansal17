mixin blogArticles(articles)
    .blog-articles-content
        each article in articles
            .article
                .content
                    a(href=article.href, target="_blank")
                        .item.title(class=!article.timestamp ? 'no-timestamp' : '')=article.title
                    if (article.timestamp)
                        .item.timestamp=article.timestamp
                    .item.description=article.description
                    a.item.more-link(href=article.href, target="_blank")
                        span Read More
                        include ../../images/icons/forward-arrow-icon.svg